<!-- lofi/app/components/player.hbs -->
<div class="z-20 fixed border border-transparent hover:border-white/10 bottom-4 left-1/2 -translate-x-1/2 bg-stone-500/20 backdrop-blur-sm p-4 rounded-xl shadow-lg flex items-center w-[calc(100vw-2rem)] md:w-1/2 lg:w-2/5 xl:w-1/3">

  <div class="flex flex-col w-full">
    <div class="flex justify-between items-center mb-2">
      <div class="text-sm font-medium text-gray-100">
        {{this.currentSongName}}
      </div>
      <div class="text-xs text-gray-300">
        {{this.currentTimeDisplay}}/{{this.durationDisplay}}
      </div>
    </div>

    <div class="flex items-center gap-2">
      <PreviousTrackButton
        @onClick={{this.previousSong}}
        @isDisabled={{this.isPreviousDisabled}}
        @label="Previous"
        @tooltip={{if this.isPreviousDisabled "No previous song" "Previous"}}
      />

      <PlayPauseButton
        @isPlaying={{this.isPlaying}}
        @onClick={{this.togglePlay}}
      />

      <ForwardButton
        @onClick={{this.nextSong}}
      />

      <div class="grow"></div>

      <VolumeControl
        @volume={{this.volume}}
        @isMuted={{this.isMuted}}
        @onToggleMute={{this.toggleMute}}
        @onVolumeChange={{this.updateVolume}}
      />
    </div>
  </div>
</div>
